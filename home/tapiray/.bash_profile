[[ -f ~/.bashrc ]] && . ~/.bashrc

export EDITOR="vim"
export TERMINAL="st"
export BROWSER="w3m"
export VIEWER="sxiv"
export PLAYER="mpv"
export LAUNCHER="rofi"
export READER="zathura"
export HOME=/home/$USER
export XAUTHORITY=$HOME/.cache/xauth
export HISTFILE=$HOME/.cache/bash_history
export HISTSIZE=10
export HISTFILESIZE=10
export LESSHISTFILE=/dev/null
unset LESSHITSIZE
